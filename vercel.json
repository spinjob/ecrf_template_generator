{
  "version": 2,
  "builds": [
    {
      "src": "client/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/forms/:formId/data/:subjectId",
      "destination": "/api/forms/[formId]/data/[subjectId].ts"
    },
    {
      "source": "/api/forms/:formId/data",
      "destination": "/api/forms/[formId]/data/index.ts"
    },
    {
      "source": "/api/forms/:id",
      "destination": "/api/forms/[id].ts"
    },
    {
      "source": "/api/forms",
      "destination": "/api/forms/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/client/$1"
    }
  ]
} 